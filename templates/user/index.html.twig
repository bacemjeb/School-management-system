{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <h3 class="m-subheader__title m-subheader__title--separator">
        Liste des utilisateurs
    </h3>
    <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
        <li class="m-nav__item m-nav__item--home">
            <a href="" class="m-nav__link m-nav__link--icon">
                <i class="m-nav__link-icon la la-home"></i>
            </a>
        </li>
        <li class="m-nav__separator">
            -
        </li>
        <li class="m-nav__item">
            <a href="{{ path('user_index') }}" class="m-nav__link">
                <span class="m-nav__link-text">
                    Liste des utilisateurs
                </span>
            </a>
        </li>
    </ul>
{% endblock %}
{% block bodycontent %}
    <div class="row">
        <div class="col-lg-12">
            <!--begin::Portlet-->
            <a class="btn btn-primary btn-sm m-btn m-btn--custom m--pull-right" href="{{ path('user_new') }}">Ajouter
                un utilisateur</a><br><Br>
            <div  class="role" data-role="{{app.user.roles[0]}}"></div>
            <div class="m-portlet  m-portlet--head-solid-bg m-portlet--head-sm" m-portlet="true" id="m_portlet_tools_1">
                <div class="m-portlet__head dark_portlet">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon">
                                <i class="fa fa-search orange_text"></i>
                            </span>
                            <h3 class="m-portlet__head-text orange_text">
                                Rechercher
                            </h3>
                        </div>
                    </div>
                    <div class="m-portlet__head-tools">
                        <ul class="m-portlet__nav">
                            <li class="m-portlet__nav-item">
                                <a href="#" m-portlet-tool="toggle"
                                   class="m-portlet__nav-link m-portlet__nav-link--icon"
                                   aria-describedby="tooltip_45h7dry0qi">
                                    <i class="la la-angle-down orange_text"></i>
                                </a>

                            </li>

                        </ul>
                    </div>

                </div>


                <div class="m-portlet__body">

                    {{ form_start(form, { 'attr' : { 'class': 'm-form m-form--fit m-form--label-align-left' } }) }}


                    <div class="form-group m-form__group row">
                        <label class="col-lg-2 col-form-label">
                            Nom de contact
                        </label>
                        <div class="col-lg-4">
                            {{ form_widget(form.username, {'attr': {'class': 'form-control m-input', 'placeholder':'Nom'}}) }}
                        </div>

                        <label class="col-lg-2 col-form-label">
                            E-mail
                        </label>
                        <div class="col-lg-4">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control m-input', 'placeholder':'E-mail'}}) }}
                        </div>
                    </div>
                    <div class="form-group m-form__group row">

                        <label class="col-lg-2 col-form-label">
                            Etat
                        </label>
                        <div class="col-lg-4">
                            {{ form_widget(form.enabled, {'attr': {'class': 'form-control m-input input-chek'}}) }}

                        </div>
                     
                    </div>
          
                    <div class="m-form__actions">
                        <div class="row">

                            <div class="col-lg-12">
                                {{ form_widget(form.save, {'attr': {'class': 'btn btn-dark pull-left'}, 'label': 'Rechercher'}) }}
                            </div>
                        </div>
                    </div>


                    {{ form_errors(form) }}
                    {{ form_rest(form) }}
                    {{ form_end(form) }}  

                </div>

            </div>
            <!--end::Portlet-->
            <div class="m-portlet m-portlet--mobile">

                <div class="m-portlet__body">

                    <!--begin: Datatable -->
                    <div class="m_datatable" id="usersTable"></div>

                    <!--end: Datatable -->
                </div>
            </div>
        </div>
    </div>

{% endblock %}