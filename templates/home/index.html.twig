                        <h3 class="title-index m-widget27__title m--font-light">
                            <span class=" number-index m--font count">
{#                                {{nbrProducts}}#} 500
                            </span>
                        </h3>

                        <span class="name-composant">
                           Supplier Products
                        </span>

                    </div>
                    <!--end::New Users-->
                </div>
            </div>
        </div>
    </div>
